<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="#C2B8F4">

    <!-- 뒤로가기 -->
    <TextView
        android:id="@+id/backToHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뒤로가기"
        android:textColor="#FFFFFF"
        android:textSize="14sp"
        android:layout_marginBottom="12dp" />

    <!-- 제목 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="12dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:contentDescription="식사 아이콘"
            android:layout_marginEnd="8dp" />

        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="오늘의 급식"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF" />
    </LinearLayout>

    <!-- 날짜 -->
    <TextView
        android:id="@+id/mealDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2025년 6월 21일"
        android:gravity="center"
        android:textSize="16sp"
        android:background="#FFFFFF"
        android:textColor="#333333"
        android:padding="10dp"
        android:layout_marginBottom="8dp"/>

    <!-- 기관명 -->
    <TextView
        android:id="@+id/schoolName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="쁘띠베베 어린이집"
        android:gravity="center"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="16dp"/>

    <!-- 아침 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_box"
        android:padding="16dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아침"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/breakfastMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 국\n- 쌀밥\n- 반찬1\n- 반찬2"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- 점심 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_box"
        android:padding="16dp"
        android:layout_marginBottom="12dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="점심"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/lunchMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 국\n- 쌀밥\n- 반찬1\n- 반찬2"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </LinearLayout>

    <!-- 저녁 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/rounded_white_box"
        android:padding="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="저녁"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/dinnerMenu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="- 국\n- 쌀밥\n- 반찬1\n- 반찬2"
            android:textColor="#000000"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>
